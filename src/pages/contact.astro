---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Si vous souhaitez en savoir plus sur nos services"
    subtitle="Envoyez-nous un message aujourd'hui!"
    inputs={[
      {
        type: 'text',
        name: 'nom',
        label: 'Nom',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'En soumettant ce formulaire de contact, vous reconnaissez et acceptez la collecte de vos informations personnelles.',
    }}
    description="Notre équipe vous contactera dans les plus brefs délais"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        description: '+213 (0) 23 34 35 92',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'hello@inclusion.dz',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Coop 496, N°06 Rte de Bouchaoui, Ouled Fayet , Alger – Algérie.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>

---
import { getPermalink } from "~/utils/permalinks";

const { service } = Astro.props;
---

<div class="bg-orange-50 p-6 rounded-md m-3 mb-6">
  <div class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1">
    <div class="pr-6 mb-6 pt-3 relative bg-center flex flex-col">
      <h3 class="text-2xl font-bold text-orange-600 uppercase">
        <a
          href={getPermalink('/services/strategy-and-consulting')/* service.href */} 
          class="text-orange-500 hover:text-orange-700 font-bold rounded-lg text-xl text-left inline-flex items-center"
        >
          {service.title}
        </a>
      </h3>
    </div>
    <div class="col-span-3 relative">
      <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-6">
        {
          service.services.map(({ title, description = {}, /* href */ }) => (
            <div class="flex flex-col justify-between  lg:border-r-[1px] lg:border-orange-400/75 ">
              <div class="pr-6 pt-3 pb-3">
                <h4 class="text-md font-bold">{title}</h4>
                <p class="text-xs text-gray-600 mt-2" set:html={description} />
              </div>
              <div>
                <a
                  href={getPermalink('/services/strategy-and-consulting') /* href */}
                  class="text-gray-700 hover:text-orange-500 font-medium rounded-lg text-sm text-left inline-flex items-center"
                >
                  Discover more
                  <svg
                    class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 5"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M1 5h12m0 0L9 1m4 4L9 9"
                    />
                  </svg>
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

---
const { service } = Astro.props;
//const link = getPermalink(service.permalink, 'portfolio');
---
<div class="bg-orange-100 p-6 rounded-md m-3">
    <div class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 grid-cols-1">
      <div class="pr-6 mb-6 relative bg-center relative flex flex-col">
        <div class="text-2xl font-bold text-orange-600 uppercase">
          {service.title}
        </div>
      </div>
      <div class="col-span-3 relative">
        <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-6">
          {
            service.services.map(({ title, subtitle = {} }) => (
              <div class="flex flex-col justify-between  lg:border-r-[1px] lg:border-orange-400/75 ">
                <div class="pr-6 pt-3 pb-6">
                  <div class="text-md font-bold">{title}</div>
                  <p class="text-sm text-gray-600 mt-2" set:html={subtitle}></p>
                  
                </div>
                <div>
                    <svg
                      class="w-4 h-4 rtl:rotate-180"
                      aria-hidden="true"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="orange"
                      viewBox="0 0 14 10"
                    >
                      <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 5h12m0 0L9 1m4 4L9 9"
                      />
                    </svg>
                  </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  
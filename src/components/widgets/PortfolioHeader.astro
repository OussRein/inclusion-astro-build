---
import type { Widget } from '~/types';
import { findLatestPortfolios } from '~/utils/portfolio';
import PortfolioItem from '../ui/PortfolioItem.astro';

export interface Props extends Widget {
  title?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
  count?: number;
}

const count = 12;

const portfolioElements = (await findLatestPortfolios({ count })).sort((a,b) => a.order - b.order).slice(0, 6);;


---
<section class="relative not-prose" id="portfolio-header">

<div class="grid lg:grid-cols-12 md:gap-1 lg:grid-rows-6 md:grid-rows-3 md:grid-cols-10 sm:grid-cols-6 grid-cols-1">
  {portfolioElements.map((portfolio) => <PortfolioItem portfolio={portfolio} />)}
</div>
</section>
---
import type { Contact as Props } from '~/types';
import Button from '../ui/Button.astro';

const {
  description,
} = Astro.props;
---

<section class="relative">
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6">
      <div class="pt-0 pointer-events-none"></div>
      <div class="py-12 md:py-20 lg:py-0 lg:flex lg:items-center lg:gap-8">
        <div class="text-center pb-16 mt-24 md:pb-16 mx-auto">
          <div class="mx-auto">
            <h3 class="text-xl text-secondary dark:text-blue-200 font-bold tracking-wide uppercase">Ready to Grow?</h3>
            <h2
              class="text-2xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
            >
              We are passionate about helping our clients outperform the competition.
            </h2>
          </div>
          <p
            class="mt-6 text-lg md:text-xl font-semi leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200 text-center"
          >
            {description}
          </p>
          <Button class="w-1/2 mt-6" variant="primary" type="button"> Contact us </Button>
        </div>
      </div>
    </div>
  </section>

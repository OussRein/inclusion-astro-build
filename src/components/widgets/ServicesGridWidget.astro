---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const { items, id, isDark = false, classes = {}} = Astro.props;
---

<section class="relative">
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
    <div class="pt-0 pointer-events-none"></div>
    <div class="py-12 md:py-20 lg:py-0 lg:flex lg:items-center lg:gap-8">
      <div class="text-center mx-auto">
        <div class="mx-auto">
          <WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl ${classes?.container ?? ''}`}>
            <div class="mb-12">
              <h3 class="text-xl text-secondary dark:text-blue-200 font-bold tracking-wide uppercase">
                How We Can Help
              </h3>
              <h2
                class="text-2xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
              >
                Check our services
              </h2>
            </div>
            <div>
              <ol class="justify-center group/list grid grid-cols-2 w-full">
                {
                  items.map((service) => (
                    <li class="justify-center w-full hover:bg-[#F38300]	p-12 rounded-lg	 text-slate-600 hover:font-bold	 hover:text-white">
                      <div class="justify-center group relative pb-1 transition-all text-left hover:text-white">
                        <h3 class="font-medium leading-snug">
                          <div>
                            <a
                              class="inline-flex items-baseline font-bold text-2xl text-orange-600 leading-tight hover:text-white group/link"
                              href="https://inclusion.dz/"
                              target="_blank"
                              rel="noreferrer noopener"
                              aria-label="Lead Engineer at Upstatement (opens in a new tab)"
                            >
                              <>
                                <span class="absolute -inset-x-4 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block" />
                                <span>{service.title}</span>
                              </>
                            </a>
                          </div>
                          <div class="mt-4  hover:text-white ">
                            <p class="" aria-hidden="true">
                              {service.description}
                            </p>
                          </div>
                        </h3>
                      </div>
                    </li>
                  ))
                }
              </ol>
            </div>
          </WidgetWrapper>
        </div>
      </div>
    </div>
  </div>
</section>

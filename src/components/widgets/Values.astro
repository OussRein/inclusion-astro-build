      },
    ],
  },
};

const lang = getLangFromUrl(Astro.url);

let useValues;
let isReversed = false;
if (lang === 'ar') {
  useValues = values.ar;
  isReversed = true;
} else if (lang === 'en') useValues = values.en;
else useValues = values.fr;
---

<section class=" relative  mx-auto  not-prose py-12 bg-top-left bg-cover bg-[#FF8800]">
  <div class={`max-w-6xl mx-auto px-4 sm:px-6 py-12 md:py-12 flex flex-col gap-8 md:gap-12 md:flex-row ${isReversed ? 'md:flex-row-reverse' : ''}`}>
    <div class={`w-full lg:w-1/2 gap-8 md:gap-12 ${isReversed ? 'lg:ml-16 md:ml-8 ml-0' : 'lg:mr-16 md:mr-8 mr-0'}`}>
      <Headline
        title={useValues.title}
        subtitle={useValues.subtitle}
        tagline={useValues.tagline}
        classes={{
          container: 'text-center text-white md:text-left rtl:md:text-right mb-4 md:mb-8',
          title: 'mb-4 text-3xl text-grey-100 lg:text-4xl font-bold font-heading',
          subtitle: 'mb-8 text-xl text-white',
          // ...((classes?.headline as {}) ?? {}),
        }}
      />

      <div class="w-full text-center md:text-left rtl:md:text-right">
        <div class="relative m-auto">
          <img
            class="mx-auto rounded-md"
            src={useValues.image}
            alt="OUR VALUES"
          />
        </div>
      </div>
    </div>
    <div class="w-full lg:w-1/2 px-0">
      <ul class="space-y-10">
        {
          useValues.items && useValues.items.length
            ? useValues.items.map(({ title: title2, description, icon }, index) => (
                <li class="flex md:-mx-4">
                  <div class="pr-4 sm:pl-4 rtl:pr-0 rtl:pl-4 rtl:sm:pl-0 rtl:sm:pr-4">
                    <span class="flex w-16 h-16 mx-auto items-center justify-center text-2xl font-bold rounded-full bg-blue-100 text-primary">
                      {icon ? <Icon name={icon} class="w-6 h-6 icon-bold" /> : index + 1}
                    </span>
                  </div>
                  <div class="pl-4 rtl:pl-0 rtl:pr-4">
                    <h3 class="mb-4 text-2xl text-white font-semibold font-heading" set:html={title2} />
                    <p class="text-white text-xl" set:html={description} />
                  </div>
                </li>
              ))
            : ''
        }
      </ul>
    </div>
  </div>
</section>
